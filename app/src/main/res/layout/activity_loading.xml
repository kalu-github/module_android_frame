<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_src1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@android:color/holo_red_light"
            android:scaleType="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/text_src1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/holo_green_light"
            android:scaleType="centerCrop" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/button_src1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下载图片=>回调进度" />

    </LinearLayout>

    <Space
        android:layout_width="20dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_src2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@android:color/holo_red_light"
            android:scaleType="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/test_src2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/holo_green_light"
            android:scaleType="centerCrop" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/button_src2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下载图片=>默认" />

    </LinearLayout>

    <Space
        android:layout_width="20dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_src3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@android:color/holo_red_light"
            android:scaleType="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/test_src3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/holo_green_light"
            android:scaleType="centerCrop" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/button_src3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回显缓存" />

    </LinearLayout>

</LinearLayout>